@model IEnumerable<MoneyManager.Models.BoughtProduct>

@{
	ViewData["Title"] = "Index";
}

<h1>Products</h1>

<p>
	<a asp-action="Upsert">Add product</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Prodcut.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Prodcut.Category.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Price)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.BoughtDate)
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Prodcut.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Prodcut.Category.Name)
				</td>
				<th>
					@Html.DisplayFor(modelItem => item.Price)
				</th>
				<th>
					@Html.DisplayFor(modelItem => item.BoughtDate)
				</th>
				<td>
					<a asp-action="Upsert" asp-route-id="@item.Id">Edit</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>

