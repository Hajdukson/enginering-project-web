@model BoughtProduct

<h4>Product</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post" asp-action="AddProduct">
			<input hidden asp-for="ProductId"/>
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<div>
					<h2>@Model.Product.Name</h2>
				</div>
				<div>
					<h2>@Model.Product.Category.Name</h2>
				</div>
				<div>
					<label asp-for="Price" class="control-label"></label>
					<input asp-for="Price" class="form-control" />
					<span asp-validation-for="Price" class="text-danger" role="alert" />
				</div>
				<div>
					<label asp-for="Quntity" class="control-label"></label>
					<input asp-for="Quntity" class="form-control" />
					<span asp-validation-for="Quntity" class="text-danger" role="alert" />
				</div>
			</div>
			<div class="form-group">
				<input type="submit" value="Add Product" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
    }