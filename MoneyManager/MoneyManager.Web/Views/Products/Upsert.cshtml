@model ProductViewModel

<h1>@(Model.Product.Id != 0 ? "Update" : "Create")</h1>

<h4>Product</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post" asp-action="Upsert">
			<input asp-for="Product.Id" hidden />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<div>
					<label asp-for="Product.Name" class="control-label"></label>
					<input asp-for="Product.Name" class="form-control" />
					<span asp-validation-for="Product.Name" class="text-danger" role="alert"/>
				</div>
				<div>
					<label asp-for="Product.CategoryId" class="control-label"></label>
					<select asp-for="Product.CategoryId" asp-items="@Model.Categories">
						<option disabled selected>--Select Category--</option>
					</select>
					<span asp-validation-for="Product.CategoryId" role="alert" />
				</div>
			</div>
			<div class="form-group">
				@if (Model.Product.Id != 0)
				{
					<input type="submit" value="Update" class="btn btn-primary" />
				}
				else
				{
					<input type="submit" value="Create" class="btn btn-primary" />
				}
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
    }
