@page
@using MoneyManager.Models
@model MoneyManager.WWW.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-page="CreateProductCategory">Create Product Category</a>
    <a class="btn btn-primary" asp-page="CreateOutcomeCategory">Create Outcome Category</a>
    <a class="btn btn-primary" asp-page="CreateIncomeCategory">Create Income Category</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Categoires[0].Name)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Categoires) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                @{
                    if(item is ProductCategory)
                    {
                        <td>Product Category</td>
                    }
                    else if(item is IncomeCategory)
                    {
                        <td>Income Category</td>
                    }
                    else if(item is OutcomeCategory)
                    {
                        <td>Outcome Category</td>
                    }
                } 
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
